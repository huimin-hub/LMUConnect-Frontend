<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="-3dp"
        android:right="-3dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lmu_grayIV" />
            <size android:height="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/lmu_green"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
        </shape>
    </item>
    <item
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/lmu_grayIV"/>
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp"/>
        </shape>
    </item>
</layer-list>