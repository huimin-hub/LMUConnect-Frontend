<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/img_menu_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ui_icon_button"
        android:backgroundTint="@color/lmu_black"
        android:scaleType="fitCenter"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"/>

    <TextView
        android:id="@+id/tv_menu_item_name_main"
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true"
        style="@style/label_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/lmu_grayI"
        app:layout_constraintEnd_toEndOf="@+id/img_menu_item_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_menu_item_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>