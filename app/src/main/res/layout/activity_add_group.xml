<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_create_group_name"
        style="@style/title_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/social_add_group_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_create_group_name"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="@string/social_add_group_name_hint"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:startIconDrawable="@drawable/social_group_title"
        app:startIconTint="@color/lmu_grayII"
        android:textColorHint="@color/lmu_grayII"
        app:hintTextColor="@color/lmu_grayII"
        app:layout_constraintTop_toBottomOf="@id/tv_create_group_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_create_group_input_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ui_login_signup_edit_text"
            app:boxStrokeColor="@color/lmu_green"
            android:textColor="@color/lmu_grayI"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_create_group_typ"
        style="@style/title_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:text="@string/social_add_group_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_create_group_name" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:focusable="false"
        android:enabled="true"
        android:hint="@string/social_add_group_type_hint"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:startIconDrawable="@drawable/social_group_icon"
        app:startIconTint="@color/lmu_grayII"
        android:textColorHint="@color/lmu_grayII"
        app:hintTextColor="@color/lmu_grayII"
        app:layout_constraintTop_toBottomOf="@id/tv_create_group_typ">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_create_group_input_typ"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:focusable="false"
            android:enabled="true"
            android:background="@drawable/ui_login_signup_edit_text"
            app:boxStrokeColor="@color/lmu_green"
            android:textColor="@color/lmu_grayI"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>