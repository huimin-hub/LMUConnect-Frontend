<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/social_personal_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/social_personal_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/lmu_black"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true"
        android:text=""
        style="@style/title_medium"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/social_personal_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/social_personal_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/lmu_grayII"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true"
        android:text=""
        style="@style/label_medium"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/social_personal_item_image"
        app:layout_constraintTop_toTopOf="@id/social_personal_item_name" />

    <TextView
        android:id="@+id/social_personal_item_time"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        style="@style/label_small"
        android:textColor="@color/lmu_grayII"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/social_personal_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>