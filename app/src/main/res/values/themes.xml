<resources>
    <!-- Base application theme. -->
    <style name="Theme.LMUconnect" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Status bar color. -->
        <item name="colorPrimary">@color/lmu_black</item>
        <item name="colorAccent">@color/lmu_green</item>
        <item name="android:statusBarColor">@color/lmu_black</item>
        <item name="android:homeAsUpIndicator">@drawable/app_back</item>
        <item name="android:forceDarkAllowed">false</item>
        <!-- Customize your theme here.
        <item name="android:actionBarStyle">@style/Theme.ActionBarStyle</item>-->
    </style>

    <style name="Theme.LMUconnect.NoActionBar" parent="Theme.LMUconnect">
         Disable action bar
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

