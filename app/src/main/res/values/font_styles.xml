<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Title -->
    <style name="title_large">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28dp</item>
        <item name="android:textColor">@color/lmu_black</item>
    </style>

    <style name="title_medium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/lmu_black</item>
    </style>

    <!-- Label -->
    <style name="label_large">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20dp</item>
        <item name="android:textColor">@color/lmu_black</item>
    </style>

    <style name="label_medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:textColor">@color/lmu_black</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="label_small">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <!-- Body -->
    <style name="body_large">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/lmu_grayI</item>
    </style>
    <style name="body_medium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20dp</item>
        <item name="android:textColor">@color/lmu_grayI</item>
    </style>
    <style name="body_small">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:textColor">@color/lmu_grayI</item>
    </style>

    <!-- other styles -->
    <style name="link">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">18dp</item>
        <item name="android:textColor">@color/lmu_black</item>
    </style>
</resources>